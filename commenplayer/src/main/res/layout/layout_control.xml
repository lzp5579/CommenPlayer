<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_player_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_player_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_player_back" />

        <TextView
            android:id="@+id/tv_player_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_player_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_player_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/ic_player_pause" />

        <TextView
            android:id="@+id/tv_player_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="00:00"
            android:textColor="#ffffff" />

        <SeekBar
            android:id="@+id/seek_player_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:background="@null"
            android:max="100"
            android:maxHeight="4dp"
            android:minHeight="4dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:progressDrawable="@drawable/seek_bottom_progress"
            android:thumb="@drawable/seek_bottom_thumb" />

        <TextView
            android:id="@+id/tv_player_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="00:00"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/iv_player_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:scaleType="center"
            android:src="@drawable/ic_player_fullscreen_in" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/prb_player_loading"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/loading"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/layout_player_tips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_player_tips_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前为移动网络，是否继续播放？"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_player_tips_btn"
            android:layout_width="66dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_bg_control"
            android:gravity="center"
            android:text="继续播放"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </LinearLayout>
</RelativeLayout>
